{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostOs": {
      "type": "string",
      "defaultValue": "RHEL_7.5",
      "allowedValues": [
        "RHEL_7.4",
        "RHEL_7.5"
      ],
      "metadata": {
        "description": "OS to install on the host system"
      }
    },
    "RedhatSubscriptionID": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Redhat Subscription ID"
      }
    },
    "RedhatSubscriptionPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Redhat Subscription password"
      }
    },
    "GlusterWebAdminVMsku": {
      "type": "string",
      "defaultValue": "Standard_D16s_v3",
      "allowedValues": [
        "Standard_D16s_v3",
        "Standard_D32s_v3"
      ],
      "metadata": {
        "description": "sku to use for the monitor VM for Web Administration"
      }
    },
    "scaleNumber": {
      "type": "int",
      "defaultValue": 4,
      "allowedValues": [
        4,
        8,
        12
      ],
      "metadata": {
        "description": "Number of gluster host machines"
      }
    },
    "existingVNetName": {
      "type": "string",
      "metadata": {
        "description": "name of existing Virtual Network"
      }
    },
    "existingVNetResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "name of Resource Group for existing Virtual Network"
      }
    },
    "existingSubnetName": {
      "type": "string",
      "metadata": {
        "description": "name of existing Virtual Network"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin User Name"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Admin password for the virtual machines"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_L64s_v2",
      "allowedValues": [
        "Standard_L16s_v2",
        "Standard_L32s_v2",
        "Standard_L64s_v2",
        "Standard_L80s_v2"
      ],
      "metadata": {
        "description": "sku to use for the Gluster host VM's"
      }
    },
    "arbiterDiskSize": {
      "type": "int",
      "defaultValue": 32,
      "metadata": {
        "description": "Size of attached Premium Disks for arbiter bricks"
      }
    },
    "vmNamePrefix": {
      "type": "string",
      "defaultValue": "glusterhost",
      "metadata": {
        "description": "VM name prefix, a number will be appended for each host"
      }
    },
    "volumeName": {
      "type": "string",
      "defaultValue": "gfsvol",
      "metadata": {
        "description": "Gluster file system volume name"
      }
    }
  },
  "variables": {
    "nicName": "nic",
    "DiagSAName": "[concat(uniqueString(subscription().id, resourceGroup().id), 'diag')]",
    "vnetID": "[resourceId(parameters('existingVNetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('existingVNetName'))]",
    "SubnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('existingSubnetName'))]",
    "imageReference": "[variables('computeImages')[parameters('hostOS')]]",
   
    "glusterScripts": {
        "scriptsToDownload": [
         "https://raw.githubusercontent.com/grandparoach/gluster/LseriesEDA/azuregfs.sh" 
        ],
        "commandToExecute": "[concat('bash azuregfs.sh ')]"
    },
    "GlusterWebAdminScripts": {
      "scriptsToDownload": [
        "https://raw.githubusercontent.com/grandparoach/gluster/LseriesEDA/webadmin.sh"
      ],
      "commandToExecute": "[concat('bash webadmin.sh ')]"
    },
    "computeImages": {
      "RHEL_7.4": {
        "publisher": "Redhat",
        "offer": "RHEL",
        "sku": "7.4",
        "version": "latest"
      },
      "RHEL_7.5": {
        "publisher": "Redhat",
        "offer": "RHEL",
        "sku": "7-RAW",
        "version": "latest"
      }
    }
  },
  "resources": [
    {
        "type": "Microsoft.Compute/availabilitySets",
            "sku": {
                "name": "Aligned"
            },
            "name": "GlusterAVSet",
            "apiVersion": "2017-12-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "scale": null,
            "properties": {
                "platformUpdateDomainCount": 5,
                "platformFaultDomainCount": 2,
                "virtualMachines": []
            },
        "dependsOn": []
    },
    {
        "type": "Microsoft.Storage/storageAccounts",
        "name": "[variables('DiagSAName')]",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "properties": {
          "accountType": "Standard_LRS"
        }
      },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "GlusterWebAdmin-PublicIP",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "GlusterWebAdmin-nic",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-04-01",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/GlusterWebAdmin-PublicIP')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "GlusterWebAdmin-nic-ipconfig",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses','GlusterWebAdmin-PublicIP')]"
              }, 
              "subnet": {
                "id": "[variables('SubnetRef')]"
              }
            }
          }
        ],
        "enableAcceleratedNetworking": true
      }
    },    
    {
      "apiVersion": "2018-04-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('nicName'), copyindex(1))]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "gfs",
        "count": "[parameters('scaleNumber')]"
      },
      "dependsOn": [
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SubnetRef')]"
              }
            }
          }
        ],
        "enableAcceleratedNetworking": true
      }
    },

    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "GlusterWebAdmin",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-04-30-preview",
      "dependsOn": [
        "[concat('Microsoft.Network/networkinterfaces/GlusterWebAdmin-nic')]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('DiagSAName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('GlusterWebAdminVMsku')]"
        },
        "osProfile": {
          "computerName": "GlusterWebAdmin",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": { }
        },
        "storageProfile": {
          "imageReference": "[variables('imageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
             "managedDisk": {
                "storageAccountType": "Premium_LRS"
             }
          },
          "dataDisks": [
            {
              "diskSizeGB": 32,
              "lun": 0,
              "createOption": "Empty"
            },
            {
              "diskSizeGB": 512,
              "lun": 1,
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
               "id": "[resourceId('Microsoft.Network/networkInterfaces','GlusterWebAdmin-nic')]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
           "storageUri": "[concat('http://',variables('DiagSAName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    
     
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat('GlusterWebAdmin', '/ext')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', 'GlusterWebAdmin')]",
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmNamePrefix'), parameters('scaleNumber'), '/extensions/extension')]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": "[variables('GlusterWebAdminScripts').scriptsToDownload]"
        },
        "protectedSettings": {
          "commandToExecute": "[concat('bash webadmin.sh ', parameters('adminUsername'), ' ', parameters('adminPassword'), ' ',parameters('vmNamePrefix'), ' ',  parameters('scaleNumber'), ' ', parameters('RedhatSubscriptionID'), ' ', parameters('RedhatSubscriptionPassword'), ' ', parameters('volumeName'))]" 
        }
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('vmNamePrefix'), sub(mul(copyindex(1), 2), 1))]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "gfs",
        "count": "[div(parameters('scaleNumber'),2)]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'), sub(mul(copyindex(1), 2), 1))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('DiagSAName'))]",
        "[concat('Microsoft.Compute/availabilitySets/GlusterAVSet')]"
      ],
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', 'GlusterAVSet')]"
        },  
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('vmNamePrefix'), sub(mul(copyIndex(1), 2), 1))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": { }
        },
        "storageProfile": {
          "imageReference": "[variables('imageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
            "managedDisk": {
                "storageAccountType": "Premium_LRS"
            }
          },
          "dataDisks": [ ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('nicName'), sub(mul(copyindex(1), 2), 1)))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
           "storageUri": "[concat('http://',variables('DiagSAName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('vmNamePrefix'), mul(copyindex(1), 2))]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "gfs",
        "count": "[div(parameters('scaleNumber'),2)]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'), mul(copyindex(1), 2))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('DiagSAName'))]",
        "[concat('Microsoft.Compute/availabilitySets/GlusterAVSet')]"
      ],
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', 'GlusterAVSet')]"
        },  
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('vmNamePrefix'), mul(copyIndex(1), 2))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": { }
        },
        "storageProfile": {
          "imageReference": "[variables('imageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
            "managedDisk": {
                "storageAccountType": "Premium_LRS"
               }
            },
            "copy": [{
                "name": "dataDisks",
                "count": "[if(equals(parameters('vmSize'), 'Standard_L16s_v2'), 2, if(equals(parameters('vmSize'), 'Standard_L32s_v2'), 4, if(equals(parameters('vmSize'), 'Standard_L64s_v2'), 8, if(equals(parameters('vmSize'), 'Standard_L80s_v2'), 10, 1))))]",
                "input": {
                    "lun": "[copyIndex('dataDisks')]",
                    "createOption": "Empty",
                    "caching": "None",
                    "diskSizeGB": "[parameters('arbiterDiskSize')]"
                }
            }]     
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('nicName'), mul(copyindex(1), 2)))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
           "storageUri": "[concat('http://',variables('DiagSAName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmNamePrefix'), copyindex(1), '/extension')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "gfs-extention",
        "count": "[sub(parameters('scaleNumber'),1)]"
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmNamePrefix'), copyindex(1))]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
            "fileUris": "[variables('glusterScripts').scriptsToDownload]"
          },
          "protectedSettings": {
            "commandToExecute": "[concat('bash azuregfs.sh ', parameters('vmNamePrefix'), ' ', parameters('volumeName'), ' ', copyindex(1), ' ', parameters('scaleNumber'), ' ', parameters('RedhatSubscriptionID'), ' ', parameters('RedhatSubscriptionPassword'))]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmNamePrefix'), parameters('scaleNumber'), '/extension')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmNamePrefix'), parameters('scaleNumber'))]",
        "gfs-extention"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
            "fileUris": "[variables('glusterScripts').scriptsToDownload]"
          },
          "protectedSettings": {
            "commandToExecute": "[concat('bash azuregfs.sh ', parameters('vmNamePrefix'), ' ', parameters('volumeName'), ' ', parameters('scaleNumber'), ' ', parameters('scaleNumber'), ' ', parameters('RedhatSubscriptionID'), ' ', parameters('RedhatSubscriptionPassword'))]" 
        }
      }
    }
  ]
}
